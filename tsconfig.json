{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "sourceMap": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "lib": ["es2015", "dom"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}